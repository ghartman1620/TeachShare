{
    "compilerOptions": {
      "lib": ["dom", "es5", "es2015"],
      "target": "es5",
      "strict": false,
      "module": "esnext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true
    },
    "include": [
      "./src/**/*"
    ]
  }