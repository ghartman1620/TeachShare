{
    "compilerOptions": {
      "lib": ["dom", "es5", "es6", "es2015", "es2015.promise"],
      "target": "es6",
      "strict": true,
      "module": "esnext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      // "allowJs": true,
      "importHelpers": true
    },
    "include": [
      "./src/**/*"
    ]
  }